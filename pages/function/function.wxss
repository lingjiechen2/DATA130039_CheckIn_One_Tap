/* pages/message/message.wxss */
page {
  background-color: #f5f5f5ec; 
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5;
  padding: 20px;
}

.block {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 85%;
  border-radius: 8px;
  padding: 28px;
  margin-bottom: 10px;
  box-shadow: 0 4px 9px rgba(0, 0, 0, 0.1);
  font-size: 22px;
  color: #FBFBFB;
}

.block:last-child {
  margin-bottom: 0;
}

