/**index.wxss**/
page {
  background-color: #f5f5f5ec; 
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.signin-bar
{
  color: rgba(0, 0, 0, 0.678);
  font-size: 14px;
  position: absolute;
  top:57%;
  width: 100%;
  left:5%; 
}
.signin-info {
  background-color:rgb(216, 214, 214);
  color: rgba(0, 0, 0, 0.678);
  font-size: 14px;
  position: absolute;
  top:62%;
  width: 100%;
  left:3%;
  padding: 10px;
  border-radius: 3%;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.25);
}

.signin-info::before {
  content: "";
  display: block;
  position: absolute;
  left: -10px;
  top: 0;
  width: 10px;
  height: 100%;
  background-color: #984447;
}

.signin-bar::before {
  content: "";
  display: block;
  position: absolute;
  left: -12px;
  top: 0;
  width: 5px;
  height: 100%;
  background-color: #358f83;
}
